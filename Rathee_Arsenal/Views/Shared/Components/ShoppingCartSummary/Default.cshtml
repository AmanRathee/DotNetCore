@model ShoppingCartVM

@if (Model.ShoppingCart.ShoppingCartItems.Count > 0 )
{
    <li class="nav-item">
        <a asp-controller="ShoppingCart" class="nav-link">
            <span >Cart</span>
            <span id="cart-status" >
                @Model.ShoppingCart.ShoppingCartItems.Select(x=>x.Number).Sum()
            </span>
        </a>
    </li>
}
